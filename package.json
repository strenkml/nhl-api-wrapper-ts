{
  "name": "nhl-api-wrapper-ts",
  "version": "1.0.0",
  "description": "Node Wrapper library for accessing the NHL API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "lint": "npx eslint .",
    "lintfix": "npx eslint . --fix",
    "format": "npx prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "update": "npx npm-check -u",
    "docs": "npx typedoc --entryPointStrategy expand ./src --name nhl-api-wrapper-ts --out ./docs"
  },
  "keywords": [
    "nhl",
    "ts",
    "api"
  ],
  "author": "Matt Strenk",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^22.5.5",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "npm-check": "^6.0.1",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.7",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
